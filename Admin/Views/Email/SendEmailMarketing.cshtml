@* File: Views/Email/SendEmailMarketing.cshtml *@
@{
    ViewData["Title"] = "Gửi Email Marketing";
}

<h2>Gửi Email Marketing</h2>

<form method="post" asp-action="SendEmailMarketing" asp-controller="Email" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="subject">Tiêu đề email:</label>
        <input type="text" class="form-control" id="subject" name="subject" required />
        <span class="text-muted">Tránh sử dụng từ ngữ gây spam.</span>
    </div>

    <div class="form-group">
        <label for="htmlBody">Nội dung HTML:</label>
        <textarea class="form-control" id="htmlBody" name="htmlBody" rows="10" required></textarea>
        <span class="text-muted">Cá nhân hóa nội dung, cân bằng hình ảnh và văn bản.</span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Gửi Email</button>
</form>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["ErrorMessage"]
    </div>
}