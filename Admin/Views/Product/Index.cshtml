@model IEnumerable<ProductModel>

@{
    ViewData["Title"] = "Danh Sách Sản Phẩm";
}

<h3>Danh Sách Sản Phẩm</h3>
<a asp-action="Create" asp-controller="Product" class="btn btn-primary">Thêm sản phẩm</a>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Giá</th>
            <th scope="col">Ảnh</th>
            <th scope="col">Danh mục</th>
            <th scope="col">Thương hiệu</th>
            <th scope="col">Actions</th> <!-- Thêm cột hành động -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@Html.Raw(@item.Description)</td>
                <!-- Định dạng giá tiền VND -->
                <td>@string.Format("{0:0,0} ₫", @item.Price)</td>
                <td><img src="~/media/products/@item.Image" width="120"></td>
                <td>@item.Category.Name</td>
                <td>@item.Brand.Name</td>
                <td>
                    <!-- Bao bọc các nút trong một cột riêng biệt -->
                    <a asp-action="Edit" class="btn btn-warning btn-sm d-inline" asp-controller="Product" asp-route-Id="@item.Id">Edit</a>
                    <form asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc chắn muốn xóa Sản phẩm này?');">
                        <button type="submit" class="btn btn-danger btn-sm confirmDeletion">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    table.table {
        margin-top: 20px;
        border: 1px solid #ddd;
    }

    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .table img {
        max-width: 100px;
        height: auto;
        object-fit: cover;
    }

    .btn {
        margin: 0 5px;
    }

    .btn-sm {
        font-size: 0.875rem;
        padding: 0.25rem 0.5rem;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-warning:hover, .btn-danger:hover {
            opacity: 0.9;
        }

</style>
